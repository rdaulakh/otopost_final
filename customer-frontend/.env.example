# AI Social Media Management Platform - Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=https://your-api-domain.com
VITE_API_VERSION=v1

# =============================================================================
# Authentication Configuration
# =============================================================================
VITE_AUTH_DOMAIN=your-auth-domain.com
VITE_AUTH_CLIENT_ID=your-client-id
VITE_AUTH_AUDIENCE=your-auth-audience

# =============================================================================
# Social Media Platform APIs
# =============================================================================

# Facebook/Meta APIs
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram Basic Display API
VITE_INSTAGRAM_CLIENT_ID=your-instagram-client-id
VITE_INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# LinkedIn API
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
VITE_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Twitter API v2
VITE_TWITTER_API_KEY=your-twitter-api-key
VITE_TWITTER_API_SECRET=your-twitter-api-secret
VITE_TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# TikTok API
VITE_TIKTOK_CLIENT_KEY=your-tiktok-client-key
VITE_TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube Data API
VITE_YOUTUBE_API_KEY=your-youtube-api-key
VITE_YOUTUBE_CLIENT_ID=your-youtube-client-id

# =============================================================================
# AI Services Configuration
# =============================================================================

# OpenAI API
VITE_OPENAI_API_KEY=your-openai-api-key
VITE_OPENAI_ORGANIZATION=your-openai-organization

# AWS Bedrock (Alternative AI Service)
VITE_AWS_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your-aws-access-key
VITE_AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# Payment Processing
# =============================================================================

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Mixpanel
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Email Services
# =============================================================================

# AWS SES
VITE_AWS_SES_REGION=us-east-1

# SendGrid
VITE_SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# File Storage
# =============================================================================

# AWS S3
VITE_AWS_S3_BUCKET=your-s3-bucket-name
VITE_AWS_S3_REGION=us-east-1

# Cloudinary (Alternative)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_API_KEY=your-cloudinary-api-key

# =============================================================================
# Development Configuration
# =============================================================================

# Environment
VITE_NODE_ENV=development

# Debug Mode
VITE_DEBUG=true

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Secret (for development only)
VITE_JWT_SECRET=your-jwt-secret-key

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/Disable Features
VITE_FEATURE_AI_AGENTS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CAMPAIGNS=true
VITE_FEATURE_BILLING=true

# =============================================================================
# Third-Party Integrations
# =============================================================================

# Zapier
VITE_ZAPIER_WEBHOOK_URL=your-zapier-webhook-url

# Slack
VITE_SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# CDN Configuration
# =============================================================================

# CloudFront Distribution
VITE_CDN_URL=https://your-cloudfront-domain.com

# =============================================================================
# Database Configuration (for reference)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/social_media_db

# Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# Notes
# =============================================================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use different values for development, staging, and production
# 4. Ensure all team members have access to required credentials
# 5. Rotate API keys regularly for security


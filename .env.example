# AI Social Media Management Platform - Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=8000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:5173
API_BASE_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration (Primary Database)
MONGODB_URI=mongodb://localhost:27017/ai-social-media
MONGODB_DB_NAME=ai-social-media

# Redis Configuration (Cache & Real-time)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Chroma Vector Database (AI Agents Memory)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_db

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ADMIN_SECRET=your-admin-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Claude Configuration (Alternative to OpenAI)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# AI Agents Configuration
AI_AGENTS_ENABLED=true
AI_AGENTS_MAX_CONCURRENT=5
AI_AGENTS_RETRY_ATTEMPTS=3

# =============================================================================
# SOCIAL MEDIA API CONFIGURATION
# =============================================================================
# Facebook & Instagram
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-facebook-webhook-token
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/auth/linkedin/callback

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:8000/api/auth/tiktok/callback

# YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:8000/api/auth/youtube/callback

# Pinterest
PINTEREST_APP_ID=your-pinterest-app-id
PINTEREST_APP_SECRET=your-pinterest-app-secret
PINTEREST_REDIRECT_URI=http://localhost:8000/api/auth/pinterest/callback

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_SUCCESS_URL=http://localhost:3000/payment/success
STRIPE_CANCEL_URL=http://localhost:3000/payment/cancel

# =============================================================================
# AWS SERVICES CONFIGURATION
# =============================================================================
# AWS General
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# AWS S3 (File Storage)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-s3-access-key
AWS_S3_SECRET_ACCESS_KEY=your-s3-secret-key

# AWS SES (Email Service)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-ses-access-key
AWS_SES_SECRET_ACCESS_KEY=your-ses-secret-key
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration (Alternative to SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_VERIFICATION_TEMPLATE=email-verification
PASSWORD_RESET_TEMPLATE=password-reset
WELCOME_EMAIL_TEMPLATE=welcome

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Google Analytics
GA_TRACKING_ID=UA-your-tracking-id
GA4_MEASUREMENT_ID=G-your-measurement-id

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key

# Social Media Webhooks
FACEBOOK_WEBHOOK_SECRET=your-facebook-webhook-secret
TWITTER_WEBHOOK_SECRET=your-twitter-webhook-secret
LINKEDIN_WEBHOOK_SECRET=your-linkedin-webhook-secret

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Mode Settings
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URI=mongodb://localhost:27017/ai-social-media-test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Load Balancer Configuration
TRUST_PROXY=false
BEHIND_PROXY=false

# Performance Configuration
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles
ENABLE_AI_AGENTS=true
ENABLE_SOCIAL_POSTING=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_FILE_UPLOADS=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Your custom environment variables here
CUSTOM_FEATURE_FLAG=false
CUSTOM_API_ENDPOINT=https://api.example.com
CUSTOM_SECRET_KEY=your-custom-secret

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use strong, unique secrets for JWT and session keys
# 4. Configure at least one AI provider (OpenAI or Claude)
# 5. Set up AWS credentials for S3 and SES functionality
# 6. Configure social media app credentials for integrations
# 7. Set up Stripe for payment processing
# 8. Ensure MongoDB and Redis are accessible with provided URIs


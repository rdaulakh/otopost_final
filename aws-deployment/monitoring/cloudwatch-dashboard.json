{
  "widgets": [
    {
      "type": "metric",
      "x": 0,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "RequestCount", "LoadBalancer", "${LoadBalancerName}"],
          [".", "TargetResponseTime", ".", "."],
          [".", "HTTPCode_Target_2XX_Count", ".", "."],
          [".", "HTTPCode_Target_4XX_Count", ".", "."],
          [".", "HTTPCode_Target_5XX_Count", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "Application Load Balancer Metrics",
        "period": 300,
        "stat": "Sum"
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/EC2", "CPUUtilization", "AutoScalingGroupName", "${AutoScalingGroupName}"],
          [".", "NetworkIn", ".", "."],
          [".", "NetworkOut", ".", "."],
          [".", "DiskReadOps", ".", "."],
          [".", "DiskWriteOps", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "EC2 Instance Metrics",
        "period": 300,
        "stat": "Average"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/DocDB", "CPUUtilization", "DBClusterIdentifier", "${MongoDBClusterName}"],
          [".", "DatabaseConnections", ".", "."],
          [".", "ReadLatency", ".", "."],
          [".", "WriteLatency", ".", "."],
          [".", "ReadThroughput", ".", "."],
          [".", "WriteThroughput", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "MongoDB DocumentDB Metrics",
        "period": 300,
        "stat": "Average"
      }
    },
    {
      "type": "metric",
      "x": 8,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ElastiCache", "CPUUtilization", "CacheClusterId", "${RedisClusterName}"],
          [".", "CurrConnections", ".", "."],
          [".", "CacheHits", ".", "."],
          [".", "CacheMisses", ".", "."],
          [".", "NetworkBytesIn", ".", "."],
          [".", "NetworkBytesOut", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "Redis ElastiCache Metrics",
        "period": 300,
        "stat": "Average"
      }
    },
    {
      "type": "metric",
      "x": 16,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/S3", "BucketSizeBytes", "BucketName", "${S3BucketName}", "StorageType", "StandardStorage"],
          [".", "NumberOfObjects", ".", ".", ".", "AllStorageTypes"]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "S3 Storage Metrics",
        "period": 86400,
        "stat": "Average"
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 12,
      "width": 24,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/ec2/${ProjectName}-${Environment}/application'\n| fields @timestamp, @message\n| filter @message like /ERROR/\n| sort @timestamp desc\n| limit 100",
        "region": "${AWS_REGION}",
        "title": "Application Error Logs",
        "view": "table"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 18,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["CWAgent", "mem_used_percent", "AutoScalingGroupName", "${AutoScalingGroupName}"],
          [".", "disk_used_percent", ".", ".", "device", "/dev/xvda1", "fstype", "xfs", "path", "/"],
          [".", "cpu_usage_active", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "System Resource Utilization",
        "period": 300,
        "stat": "Average"
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 18,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/AutoScaling", "GroupDesiredCapacity", "AutoScalingGroupName", "${AutoScalingGroupName}"],
          [".", "GroupInServiceInstances", ".", "."],
          [".", "GroupPendingInstances", ".", "."],
          [".", "GroupTerminatingInstances", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "Auto Scaling Group Status",
        "period": 300,
        "stat": "Average"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 24,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/SES", "Send"],
          [".", "Bounce"],
          [".", "Complaint"],
          [".", "Delivery"]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "SES Email Metrics",
        "period": 3600,
        "stat": "Sum"
      }
    },
    {
      "type": "metric",
      "x": 8,
      "y": 24,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/CloudFront", "Requests", "DistributionId", "${CloudFrontDistributionId}"],
          [".", "BytesDownloaded", ".", "."],
          [".", "4xxErrorRate", ".", "."],
          [".", "5xxErrorRate", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "CloudFront CDN Metrics",
        "period": 300,
        "stat": "Sum"
      }
    },
    {
      "type": "metric",
      "x": 16,
      "y": 24,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/Billing", "EstimatedCharges", "Currency", "USD"]
        ],
        "view": "singleValue",
        "stacked": false,
        "region": "us-east-1",
        "title": "Estimated Monthly Charges",
        "period": 86400,
        "stat": "Maximum"
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 30,
      "width": 12,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/ec2/${ProjectName}-${Environment}/application'\n| fields @timestamp, @message\n| filter @message like /API/\n| stats count() by bin(5m)",
        "region": "${AWS_REGION}",
        "title": "API Request Rate",
        "view": "bar"
      }
    },
    {
      "type": "log",
      "x": 12,
      "y": 30,
      "width": 12,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/ec2/${ProjectName}-${Environment}/application'\n| fields @timestamp, @message\n| filter @message like /AI_AGENT/\n| stats count() by bin(5m)",
        "region": "${AWS_REGION}",
        "title": "AI Agent Activity",
        "view": "bar"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 36,
      "width": 24,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "HealthyHostCount", "TargetGroup", "${TargetGroupName}"],
          [".", "UnHealthyHostCount", ".", "."]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "${AWS_REGION}",
        "title": "Target Group Health Status",
        "period": 300,
        "stat": "Average",
        "annotations": {
          "horizontal": [
            {
              "label": "Minimum Healthy Hosts",
              "value": 1
            }
          ]
        }
      }
    }
  ]
}

